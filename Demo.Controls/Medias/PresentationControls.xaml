        <Rectangle
            x:Name="mute"
            Width="45"
            Height="45"
            Margin="180,94,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Visibility="Hidden">
            <Rectangle.Fill>
                <ImageBrush ImageSource="pack://application:,,,/Demo.Controls;component/Assets/Icons/shipinyewurenkaimaibeifen.png" Stretch="Uniform" />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
