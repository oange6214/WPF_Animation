            VerticalAlignment="Top"
            Fill="#FFCCCCCC" />
        <Rectangle
            Width="45"
            Height="45"
            Margin="334,351,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="pack://application:,,,/Demo.Controls;component/Assets/Icons/arrow-right-bold.png" Stretch="Uniform" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Width="75"
