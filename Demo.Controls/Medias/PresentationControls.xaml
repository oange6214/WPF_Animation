                <ImageBrush ImageSource="pack://application:,,,/Demo.Controls;component/Assets/Icons/speaker.png" />
            </ToggleButton.Background>
        </ToggleButton>

        <Rectangle
            Width="75"
            Height="75"
            Margin="242,336,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFCCCCCC" />
        <Rectangle
            Width="45"
            Height="45"
            Margin="256,351,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="pack://application:,,,/Demo.Controls;component/Assets/Icons/arrow-left-bold.png" Stretch="Uniform" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Width="75"
            Height="75"
            Margin="318,336,0,0"
