            Text="Group Manager" />

        <TextBlock
            x:Name="tb_FileManager"
            Margin="0,210,0,0"
            Style="{StaticResource MenuItemStyle}"
            Text="File Manager" />

        <TextBlock
            x:Name="tb_AccountManager"
            Margin="0,162,0,0"
            Style="{StaticResource MenuItemStyle}"
            Text="Account Manager" />

        <TextBlock
            x:Name="tb_Schedules"
            Margin="0,116,0,0"
            Style="{StaticResource MenuItemStyle}"
            Text="Schedules" />

        <TextBlock
            x:Name="tb_Analytics"
