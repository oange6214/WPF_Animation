                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="#7b6799"
                            BorderThickness="3"
                            CornerRadius="5">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
